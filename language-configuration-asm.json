{
  "comments": {
    "lineComment": "!"
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "onEnterRules": [
    {
      "beforeText": "^[A-Za-z_][A-Za-z0-9_]*:$",
      "action": {
        "indent": "indent"
      }
    }
  ],
  "wordPattern": "(-?\\d*\\.\\d+)|([a-zA-Z_][a-zA-Z0-9_]*)|(-?\\d+)|\\[[-+a-zA-Z0-9_]+\\]"
}
